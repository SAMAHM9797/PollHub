<div class = "container">
    <div class = "row">
        <h1 style = "text-align:center;">Create a New Poll</h1>
        <div style = "width:30%; margin:25px auto ">
            <form action = "/polls" method = "POST">
                <div class = "form-group">
                  <input  class = "form-control" type = "text" name = "name" placeholder = "name">
                </div>
                 <div class = "form-group">
                    <input  class = "form-control"  type = "text" name = "option[1]" placeholder = "option1">
                </div>
                <div class = "form-group">
                    <input  class = "form-control"  type = "text" name = "option[2]" placeholder = "option2">
                </div>
               <div class = "form-group">
                    <button class = "btn btn-lg btn-primary btn-block"> Submit ! </button>
                </div>
            </form>
                <a href = "/campgrounds">Go Back</a>
        </div>
    </div>
</div>
